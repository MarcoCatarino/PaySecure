<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PaySecure.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PaySecure.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="PaySecure">

    <!-- Estilos para la navegaci칩n -->
    <Shell.Resources>
        <Style x:Key="BaseStyle" TargetType="Element">
            <Setter Property="Shell.BackgroundColor" Value="{StaticResource Primary}" />
            <Setter Property="Shell.ForegroundColor" Value="White" />
            <Setter Property="Shell.TitleColor" Value="White" />
            <Setter Property="Shell.DisabledColor" Value="#B4FFFFFF" />
            <Setter Property="Shell.UnselectedColor" Value="#95FFFFFF" />
        </Style>
    </Shell.Resources>

    <!-- P치gina de login (inicial) -->
    <ShellContent
        x:Name="login"
        Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="login" />

    <!-- P치ginas principales con TabBar -->
    <TabBar Route="main">
        <ShellContent
            Title="Inicio"
            Icon="home.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="dashboard" />

        <ShellContent
            Title="Transacciones"
            Icon="list.png"
            ContentTemplate="{DataTemplate local:TransactionListPage}"
            Route="transactions" />

        <ShellContent
            Title="Pagos"
            Icon="credit_card.png"
            ContentTemplate="{DataTemplate local:PaymentPage}"
            Route="payment" />
    </TabBar>

    <!-- P치ginas adicionales -->
    <ShellContent
        ContentTemplate="{DataTemplate local:AddTransactionPage}"
        Route="addtransaction" />

</Shell>