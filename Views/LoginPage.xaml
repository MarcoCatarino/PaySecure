<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="PaySecure.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:PaySecure.ViewModels"
    x:DataType="vm:LoginViewModel"
    Title="{Binding Title}"
    Shell.NavBarIsVisible="False">

    <Grid>
        <!-- Fondo degradado -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0.0" />
                <GradientStop Color="#764ba2" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollView>
            <StackLayout Spacing="30" Padding="40,60,40,40">

                <!-- Logo y t铆tulo -->
                <StackLayout Spacing="20" HorizontalOptions="Center">
                    <Frame 
                        BackgroundColor="White"
                        CornerRadius="40"
                        WidthRequest="80"
                        HeightRequest="80"
                        HasShadow="True">
                        <Label 
                            Text=""
                            FontSize="36"
                            HorizontalOptions="Center"
                            VerticalOptions="Center" />
                    </Frame>

                    <Label 
                        Text="PaySecure"
                        FontSize="32"
                        FontAttributes="Bold"
                        TextColor="White"
                        HorizontalOptions="Center" />

                    <Label 
                        Text="Pagos seguros con autenticaci贸n biom茅trica"
                        FontSize="16"
                        TextColor="#E0E0E0"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center" />
                </StackLayout>

                <!-- Formulario de LOGIN -->
                <Frame 
                    BackgroundColor="White"
                    CornerRadius="20"
                    Padding="30"
                    HasShadow="True"
                    IsVisible="{Binding IsRegistering, Converter={StaticResource InvertedBoolConverter}}">

                    <StackLayout Spacing="20">
                        <Label 
                            Text="Iniciar Sesi贸n"
                            FontSize="20"
                            FontAttributes="Bold"
                            TextColor="#333"
                            HorizontalOptions="Center" />

                        <!-- Campo Email -->
                        <StackLayout>
                            <Label 
                                Text="Email"
                                FontSize="14"
                                TextColor="#666"
                                FontAttributes="Bold" />
                            <Entry 
                                Text="{Binding Email}"
                                Placeholder="Ingresa tu email"
                                PlaceholderColor="#999"
                                TextColor="#333"
                                Keyboard="Email"
                                BackgroundColor="#F5F5F5"
                                FontSize="16" />
                        </StackLayout>

                        <!-- Bot贸n login con email -->
                        <Button 
                            Text="Iniciar Sesi贸n"
                            Command="{Binding LoginWithEmailCommand}"
                            BackgroundColor="#667eea"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            FontAttributes="Bold" />

                        <!-- Bot贸n demo r谩pido -->
                        <Button 
                            Text=" Acceso Demo R谩pido"
                            Command="{Binding UseQuickDemoCommand}"
                            BackgroundColor="#28a745"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="45"
                            FontAttributes="Bold" />

                        <!-- Separador -->
                        <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,10">
                            <BoxView BackgroundColor="#E0E0E0" HeightRequest="1" VerticalOptions="Center" HorizontalOptions="FillAndExpand" />
                            <Label Text="O" TextColor="#999" VerticalOptions="Center" />
                            <BoxView BackgroundColor="#E0E0E0" HeightRequest="1" VerticalOptions="Center" HorizontalOptions="FillAndExpand" />
                        </StackLayout>

                        <!-- Bot贸n biom茅trico -->
                        <Button 
                            Text=" Usar Autenticaci贸n Biom茅trica"
                            Command="{Binding LoginWithBiometricCommand}"
                            BackgroundColor="#764ba2"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            FontAttributes="Bold"
                            IsVisible="{Binding IsBiometricAvailable}" />

                        <!-- Mensaje de estado no disponible -->
                        <Frame 
                            BackgroundColor="#FFF3CD"
                            BorderColor="#FFE69C"
                            CornerRadius="10"
                            Padding="15"
                            IsVisible="{Binding IsBiometricAvailable, Converter={StaticResource InvertedBoolConverter}}">
                            <Label 
                                Text="锔 Autenticaci贸n biom茅trica no disponible en este dispositivo"
                                TextColor="#856404"
                                FontSize="12"
                                HorizontalTextAlignment="Center" />
                        </Frame>

                        <!-- Bot贸n para mostrar registro -->
                        <Button 
                            Text="驴No tienes cuenta? Reg铆strate"
                            Command="{Binding ShowRegisterCommand}"
                            BackgroundColor="Transparent"
                            TextColor="#667eea"
                            FontAttributes="Bold" />

                    </StackLayout>
                </Frame>

                <!-- Formulario de REGISTRO -->
                <Frame 
                    BackgroundColor="White"
                    CornerRadius="20"
                    Padding="30"
                    HasShadow="True"
                    IsVisible="{Binding IsRegistering}">

                    <StackLayout Spacing="20">
                        <Label 
                            Text="Crear Cuenta"
                            FontSize="20"
                            FontAttributes="Bold"
                            TextColor="#333"
                            HorizontalOptions="Center" />

                        <!-- Nombre -->
                        <StackLayout>
                            <Label Text="Nombre Completo *" FontSize="14" TextColor="#666" FontAttributes="Bold" />
                            <Entry 
                                Text="{Binding RegisterName}"
                                Placeholder="Tu nombre completo"
                                PlaceholderColor="#999"
                                TextColor="#333"
                                BackgroundColor="#F5F5F5"
                                FontSize="16" />
                        </StackLayout>

                        <!-- Email -->
                        <StackLayout>
                            <Label Text="Email *" FontSize="14" TextColor="#666" FontAttributes="Bold" />
                            <Entry 
                                Text="{Binding RegisterEmail}"
                                Placeholder="tu@email.com"
                                PlaceholderColor="#999"
                                TextColor="#333"
                                Keyboard="Email"
                                BackgroundColor="#F5F5F5"
                                FontSize="16" />
                        </StackLayout>

                        <!-- Contrase帽a -->
                        <StackLayout>
                            <Label Text="Contrase帽a *" FontSize="14" TextColor="#666" FontAttributes="Bold" />
                            <Entry 
                                Text="{Binding RegisterPassword}"
                                Placeholder="M铆nimo 4 caracteres"
                                PlaceholderColor="#999"
                                TextColor="#333"
                                IsPassword="True"
                                BackgroundColor="#F5F5F5"
                                FontSize="16" />
                        </StackLayout>

                        <!-- Tel茅fono -->
                        <StackLayout>
                            <Label Text="Tel茅fono (Opcional)" FontSize="14" TextColor="#666" FontAttributes="Bold" />
                            <Entry 
                                Text="{Binding RegisterPhone}"
                                Placeholder="+52 55 1234 5678"
                                PlaceholderColor="#999"
                                TextColor="#333"
                                Keyboard="Telephone"
                                BackgroundColor="#F5F5F5"
                                FontSize="16" />
                        </StackLayout>

                        <!-- Bot贸n registrar -->
                        <Button 
                            Text="Crear Cuenta"
                            Command="{Binding RegisterUserCommand}"
                            BackgroundColor="#28a745"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            FontAttributes="Bold" />

                        <!-- Bot贸n volver al login -->
                        <Button 
                            Text="驴Ya tienes cuenta? Iniciar Sesi贸n"
                            Command="{Binding ShowLoginCommand}"
                            BackgroundColor="Transparent"
                            TextColor="#667eea"
                            FontAttributes="Bold" />

                    </StackLayout>
                </Frame>

                <!-- Estado del login/registro -->
                <Label 
                    Text="{Binding LoginStatus}"
                    FontSize="14"
                    TextColor="White"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    IsVisible="{Binding LoginStatus, Converter={StaticResource StringIsNotNullOrEmptyConverter}}" />

                <!-- Indicador de carga -->
                <ActivityIndicator 
                    IsRunning="{Binding IsBusy}"
                    IsVisible="{Binding IsBusy}"
                    Color="White" />

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>